---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'ariaria2021の個人サイト - ブログとプロジェクト' } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title} | ariaria2021</title>
</head>
<body>
  <header class="header">
    <div class="container">
      <nav class="nav">
        <a href="/" class="nav-logo">
          <span class="gradient-text">ariaria2021</span>
        </a>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/projects">Projects</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <footer class="footer">
    <div class="container">
      <p>&copy; 2026 ariaria2021. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(10, 10, 15, 0.8);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border);
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 64px;
  }

  .nav-logo {
    font-weight: 700;
    font-size: 1.25rem;
  }

  .nav-links {
    display: flex;
    gap: var(--space-xl);
    list-style: none;
  }

  .nav-links a {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .nav-links a:hover {
    color: var(--color-text);
  }

  main {
    padding-top: 64px;
    min-height: calc(100vh - 64px);
  }

  .footer {
    padding: var(--space-xl) 0;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .footer p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .nav-links {
      gap: var(--space-md);
    }
  }
</style>
