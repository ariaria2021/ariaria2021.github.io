---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Projects" description="プロジェクト一覧">
  <section class="section">
    <div class="container">
      <div class="page-header fade-in">
        <h1 class="gradient-text">Projects</h1>
        <p>制作したもの・作っているもの</p>
      </div>
      
      <div class="projects-grid grid grid-2">
        {sortedProjects.map((project) => (
          <div class="project-card card fade-in">
            <div class="project-header">
              <h2 class="project-title">{project.data.title}</h2>
              <time>{project.data.date.toLocaleDateString('ja-JP')}</time>
            </div>
            <p class="project-description">{project.data.description}</p>
            {project.data.tags && (
              <div class="project-tags">
                {project.data.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
            <div class="project-links">
              {project.data.github && (
                <a href={project.data.github} target="_blank" rel="noopener" class="btn btn-secondary">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                  </svg>
                  GitHub
                </a>
              )}
              {project.data.demo_port && (
                <a href={project.data.demo_port} target="_blank" rel="noopener" class="btn btn-primary">
                  Port Demo
                </a>
              )}
              {project.data.demo_native && (
                <a href={project.data.demo_native} target="_blank" rel="noopener" class="btn btn-primary">
                  Native Demo
                </a>
              )}
              {!project.data.demo_port && !project.data.demo_native && project.data.demo && (
                <a href={project.data.demo} target="_blank" rel="noopener" class="btn btn-primary">
                  Demo
                </a>
              )}
            </div>
          </div>
        ))}
      </div>

      {sortedProjects.length === 0 && (
        <div class="empty-state">
          <p>まだプロジェクトがありません。</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    padding: var(--space-3xl) 0;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--space-2xl);
  }

  .page-header h1 {
    margin-bottom: var(--space-md);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-md);
  }

  .project-header time {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    flex-shrink: 0;
  }

  .project-title {
    font-size: 1.25rem;
    color: var(--color-text);
  }

  .project-description {
    font-size: 0.875rem;
    margin-bottom: var(--space-md);
  }

  .project-tags {
    display: flex;
    gap: var(--space-xs);
    flex-wrap: wrap;
    margin-bottom: var(--space-md);
  }

  .project-links {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .project-links svg {
    flex-shrink: 0;
  }

  .empty-state {
    text-align: center;
    padding: var(--space-3xl);
    color: var(--color-text-muted);
  }
</style>
